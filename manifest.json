{
    "manifest_version": 3,
    "default_locale": "en",
    "name": "__MSG_extName__",
    "version": "1.0.0",
    "description": "__MSG_extDescription__",
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": ["activeTab", "scripting", "storage", "i18n"],
    "options_page": "options.html",
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["hanzi-writer.min.js","content.js"],
        "css": ["styles.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["word.json","styles.css"],
        "matches": ["<all_urls>"]
      }
    ]
  }
